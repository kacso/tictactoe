<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="hr.inceptum.tictactoe">
    <!--TODO replace icon and round icon with   @drawable/icon_tic_tac_toe -->
    <application
            android:name=".Application"
            android:allowBackup="true"
            android:icon="@drawable/icon_tic_tac_toe"
            android:roundIcon="@drawable/icon_tic_tac_toe"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.NicknameActivity">
        </activity>

        <activity android:name=".ui.StartGameActivity">
        </activity>

        <activity android:name=".ui.GameActivity"
                  android:parentActivityName=".ui.StartGameActivity">
        </activity>
    </application>

</manifest>